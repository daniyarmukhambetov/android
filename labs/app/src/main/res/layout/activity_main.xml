<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="14"
    android:backgroundTint="#DDD8D7"
    android:background="#DDD8D7"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="6"
        android:background="@color/black"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@color/white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="7"
            android:textSize="30dp"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="8"
            android:textSize="30dp"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            android:text="9"
            android:textSize="30dp"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="0dp"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            android:text="C"
            android:textSize="30dp"
            >
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            android:text="4"
            android:textSize="30dp"
            >
        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:backgroundTint="#DDD8D7"
            android:text="5"
            android:textSize="30dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/black"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="6"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:backgroundTint="#DDD8D7"
            android:text="/"
            android:textSize="30dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/black"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="1"
            android:backgroundTint="#DDD8D7"
            android:textSize="30dp"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="2"
            android:backgroundTint="#DDD8D7"
            android:textSize="30dp"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="3"
            android:backgroundTint="#DDD8D7"
            android:textSize="30dp"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="0dp"
            android:text="*"
            android:textSize="30dp"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            android:shadowColor="#DDD8D7"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="12"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="0"
            android:backgroundTint="#DDD8D7"
            android:textSize="30dp"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text=","
            android:backgroundTint="#DDD8D7"
            android:textSize="30dp"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="="
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:shadowColor="#DDD8D7"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="0dp"
            android:text="+"
            android:textSize="30dp"
            android:backgroundTint="#DDD8D7"
            android:textColor="@color/black"
            android:shadowColor="@null"
            style="?android:attr/borderlessButtonStyle"
            >
        </Button>
    </LinearLayout>
</LinearLayout>